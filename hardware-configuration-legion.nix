    device = "/dev/disk/by-uuid/0C82-41E5";
    fsType = "vfat";
    options = [
      "fmask=0077"
      "dmask=0077"
    ];
  };

  swapDevices = [
    { device = "/dev/disk/by-uuid/2da00f59-28bd-4378-ba98-3afff9c5eb74"; }
