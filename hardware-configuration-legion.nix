    "sd_mod"
  ];
  boot.initrd.kernelModules = [ ];
  boot.kernelModules = [ "kvm-amd" ];
  boot.extraModulePackages = [ ];

  fileSystems."/" = {
    device = "/dev/disk/by-uuid/88b90fa8-9735-437f-8d43-0b0cf26f2caf";
    fsType = "ext4";
  };

  boot.initrd.luks.devices."luks-99878f5a-c4a3-4cb6-b5a8-7942161b454f".device =
    "/dev/disk/by-uuid/99878f5a-c4a3-4cb6-b5a8-7942161b454f";

